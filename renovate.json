{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "docker": {
    "enabled": false
  },
  "lockFileMaintenance": { "enabled": true },
  "timezone": "America/Toronto",
  "prHourlyLimit": 6,
  "rebaseStalePrs": true,
  "reviewers": ["GabrielCastro"],
  "schedule": [
    "after 9am and before 3pm",
    "every weekday"
  ],
  "packageRules": [{
    "groupName": "jest",
    "packageNames": ["@types/jest", "@types/expect"],
    "sourceUrlPrefixes": [
      "https://github.com/facebook/jest"
    ]
  ]
}
